{% extends 'base.html.twig' %}

{% block title %}Snowtricks | Inscription{% endblock %}

{% set user = form.vars.value %}

{% block content %}
    <div class="container" data-turbo="false">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="mt-5">
                    {% if app.user.profilePicture is not null %}
                    <img src="{{ get_public_image(app.user.profilePicture) }}" alt="Photo de profil" class="mx-auto d-block rounded-circle" style="object-fit: cover; width: 200px; height: 200px;">
                    {% else %}
                    <img src="{{ get_no_image() }}" alt="Photo de profil par dÃ©faut" class="mx-auto d-block rounded-circle" style="object-fit: cover; width: 200px; height: 200px;">
                    {% endif %}
                </div>
                <p class="display-6 text-center">{{ user.username }}</p>

                    {{ form_start(form) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.picture) }}
                    <input type="submit" class="btn btn-primary" value="Modifier">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
