{% extends 'base.html.twig' %}

{% block title %}Snowtricks | Inscription{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1 class="text-center display-3 mb-5">Mon compte</h1>
                <div>

                    {% if app.user.profilePicture is not null %}
                    <img src="{{ get_public_image(app.user.profilePicture) }}" alt="Photo de profil" class="mx-auto d-block" style="object-fit: cover; width: 200px; height: 200px;">
                    {% else %}
                    <img src="{{ get_no_image() }}" alt="Photo de profil par dÃ©faut" class="" style="object-fit: cover; width: 200px; height: 200px;">
                    {% endif %}

                    {{ form_start(form) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.picture) }}
                    <input type="submit" class="btn btn-primary" value="Modifier">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
