{% extends 'base.html.twig' %}

{% block title %}Snowtricks | Inscription{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1 class="text-center display-3">Mot de passe oubli√©</h1>
                <p class="text-center">Changez votre mot de passe</p>
                <div>
                    {{ form_start(form) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                    {{ form_row(form.password.first) }}
                    {{ form_row(form.password.second) }}
                    {{ form_row(form.id, {'attr': {'value': user_id}}) }}
                    <input type="submit" class="btn btn-primary" value="Changer">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
